<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================== -->
    <!-- Product Color Views (Only manual config)      -->
    <!-- ============================================== -->

    <record id="view_farm_product_color_tree" model="ir.ui.view">
        <field name="name">farm.product.color.tree</field>
        <field name="model">farm.product.color</field>
        <field name="arch" type="xml">
            <tree string="ألوان المنتجات" editable="bottom">
                <field name="code"/>
                <field name="name"/>
                <field name="html_color" widget="color"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_farm_product_color_form" model="ir.ui.view">
        <field name="name">farm.product.color.form</field>
        <field name="model">farm.product.color</field>
        <field name="arch" type="xml">
            <form string="لون المنتج">
                <sheet>
                    <group>
                        <group>
                            <field name="code" placeholder="مثال: 10"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="html_color" widget="color"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_farm_product_color" model="ir.actions.act_window">
        <field name="name">ألوان المنتجات</field>
        <field name="res_model">farm.product.color</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                أضف لون منتج جديد
            </p>
            <p>
                ألوان المنتجات تُستخدم لتوليد أكواد المنتجات تلقائياً.
                كل لون يحتوي على رمز من رقمين (مثال: 10=أحمر, 20=أخضر, 30=أصفر).
            </p>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- Product Category Extension                    -->
    <!-- ============================================== -->

    <record id="view_product_category_form_farm" model="ir.ui.view">
        <field name="name">product.category.form.farm</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="farm_category_code" placeholder="مثال: 101, 201, 301"/>
                <separator string="حسابات طلبات المزرعة الافتراضية"/>
                <field name="default_order_account_source" string="حساب المصدر الافتراضي (مدين)" options="{'no_create': True}"/>
                <field name="default_order_account_destination" string="حساب الوجهة الافتراضي (دائن)" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <record id="view_product_category_tree_farm" model="ir.ui.view">
        <field name="name">product.category.tree.farm</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_list_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="farm_category_code"/>
            </xpath>
        </field>
    </record>

</odoo>
