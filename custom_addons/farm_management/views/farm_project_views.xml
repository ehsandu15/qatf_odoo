<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- PROJECT VIEWS -->
    <!-- ============================================================ -->
    
    <!-- Project Tree View -->
    <record id="farm_project_view_tree" model="ir.ui.view">
        <field name="name">farm.project.view.tree</field>
        <field name="model">farm.project</field>
        <field name="arch" type="xml">
            <tree string="المشاريع" decoration-info="status == 'draft'" decoration-success="status == 'in_progress'" decoration-warning="status == 'paused'" decoration-muted="status in ('completed', 'cancelled')">
                <field name="code"/>
                <field name="name"/>
                <field name="farm_id"/>
                <field name="status" widget="badge" decoration-info="status == 'draft'" decoration-success="status == 'in_progress'" decoration-warning="status == 'paused'" decoration-primary="status == 'completed'" decoration-danger="status == 'cancelled'"/>
                <field name="planned_start_date"/>
                <field name="actual_start_date"/>
                <field name="expected_finish_date"/>
                <field name="house_count"/>
                <field name="total_area" string="المساحة (م²)"/>
                <field name="total_cost" sum="المجموع"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Project Kanban View -->
    <record id="farm_project_view_kanban" model="ir.ui.view">
        <field name="name">farm.project.view.kanban</field>
        <field name="model">farm.project</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_mobile">
                <field name="name"/>
                <field name="farm_id"/>
                <field name="status"/>
                <field name="house_count"/>
                <field name="total_cost"/>
                <field name="total_area"/>
                <field name="currency_id"/>
                <field name="progress_days"/>
                <progressbar field="status" colors='{"draft": "info", "in_progress": "success", "paused": "warning", "completed": "primary", "cancelled": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-2">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <span class="o_kanban_record_subtitle text-muted">
                                            <field name="farm_id"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="mb-2">
                                        <span class="badge bg-success me-1">
                                            <field name="house_count"/> بيت
                                        </span>
                                        <span class="badge bg-info">
                                            <field name="total_area" digits="[16,0]"/> م²
                                        </span>
                                    </div>
                                    <div class="mb-2">
                                        <strong>التكلفة: </strong>
                                        <field name="total_cost" widget="monetary"/>
                                    </div>
                                    <div t-if="record.progress_days.raw_value > 0">
                                        <small class="text-muted">
                                            <i class="fa fa-clock-o"/> <field name="progress_days"/> يوم
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Project Form View -->
    <record id="farm_project_view_form" model="ir.ui.view">
        <field name="name">farm.project.view.form</field>
        <field name="model">farm.project</field>
        <field name="arch" type="xml">
            <form string="مشروع المزرعة">
                <header>
                    <button name="action_start" type="object" string="بدء المشروع" class="btn-primary" invisible="status != 'draft'"/>
                    <button name="action_pause" type="object" string="إيقاف مؤقت" class="btn-warning" invisible="status != 'in_progress'"/>
                    <button name="action_resume" type="object" string="استئناف" class="btn-success" invisible="status != 'paused'"/>
                    <button name="action_complete" type="object" string="إكمال المشروع" class="btn-primary" invisible="status != 'in_progress'"/>
                    <button name="action_update_avco" type="object" string="تحديث تكلفة المنتجات (AVCO)" class="btn-secondary" invisible="status not in ('in_progress', 'completed')"/>
                    <button name="action_cancel" type="object" string="إلغاء" class="btn-danger" invisible="status in ('completed', 'cancelled')"/>
                    <button name="action_reset_to_draft" type="object" string="إعادة للمسودة" invisible="status in ('draft', 'completed')"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_houses" type="object" class="oe_stat_button" icon="fa-home">
                            <field name="house_count" widget="statinfo" string="البيوت"/>
                        </button>
                        <button name="action_view_costs" type="object" class="oe_stat_button" icon="fa-money">
                            <div class="o_stat_info">
                                <field name="total_cost" widget="monetary" class="o_stat_value"/>
                                <span class="o_stat_text">إجمالي التكاليف</span>
                            </div>
                        </button>
                        <button name="action_view_landed_costs" type="object" class="oe_stat_button" icon="fa-truck" invisible="landed_cost_count == 0">
                            <field name="landed_cost_count" widget="statinfo" string="تكاليف المخزون"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="مكتمل" bg_color="bg-success" invisible="status != 'completed'"/>
                    <widget name="web_ribbon" title="ملغي" bg_color="bg-danger" invisible="status != 'cancelled'"/>
                    <widget name="web_ribbon" title="متوقف مؤقتاً" bg_color="bg-warning" invisible="status != 'paused'"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="code" class="me-2 text-muted" readonly="1"/>
                            <field name="name" placeholder="اسم المشروع"/>
                        </h1>
                    </div>
                    <group>
                        <group string="معلومات المشروع">
                            <field name="farm_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="التواريخ">
                            <field name="planned_start_date"/>
                            <field name="actual_start_date"/>
                            <field name="expected_finish_date"/>
                            <field name="actual_finish_date"/>
                        </group>
                    </group>
                    
                    <!-- Dashboard Stats -->
                    <group string="ملخص المشروع">
                        <group>
                            <field name="total_area" string="إجمالي المساحة (م²)"/>
                            <field name="progress_days" string="أيام العمل"/>
                            <field name="total_paused_days" string="أيام الإيقاف"/>
                            <field name="remaining_days" string="الأيام المتبقية"/>
                        </group>
                        <group>
                            <field name="total_direct_cost"/>
                            <field name="total_indirect_cost"/>
                            <field name="total_cost"/>
                            <field name="cost_per_sqm"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="البيوت المخصصة" name="houses">
                            <field name="house_assignment_ids">
                                <tree editable="bottom">
                                    <field name="house_id" domain="[('farm_id', '=', parent.farm_id)]"/>
                                    <field name="sector_id"/>
                                    <field name="unit_id"/>
                                    <field name="house_area" string="المساحة (م²)"/>
                                    <field name="product_id" domain="[('is_farm_produce', '=', True)]" readonly="product_id"/>
                                    <field name="expected_qty" string="المتوقع"/>
                                    <field name="uom_id" string="الوحدة"/>
                                    <field name="total_harvested" string="المحصود"/>
                                    <field name="progress_percent" widget="progressbar" string="التقدم"/>
                                    <field name="total_house_cost" string="التكلفة" optional="show"/>
                                    <field name="remaining_cost" string="المتبقي" optional="show"/>
                                    <field name="avg_unit_cost" string="ت.الوحدة" optional="show"/>
                                    <field name="season" optional="hide"/>
                                    <field name="activity_description" optional="hide"/>
                                    <field name="notes" optional="hide"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="التكاليف" name="costs">
                            <field name="cost_ids" readonly="1">
                                <tree decoration-muted="state == 'cancelled'" decoration-success="state == 'posted'">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'posted'" decoration-danger="state == 'cancelled'"/>
                                    <field name="cost_type" widget="badge" decoration-info="cost_type == 'direct'" decoration-warning="cost_type == 'indirect'"/>
                                    <field name="source_display" string="المصدر"/>
                                    <field name="amount" sum="المجموع"/>
                                    <field name="house_count"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="total_direct_cost"/>
                                <field name="total_indirect_cost"/>
                                <field name="total_cost" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="سجل الحالات" name="status_history">
                            <field name="status_history_ids" readonly="1">
                                <tree decoration-info="new_status == 'draft'" decoration-success="new_status == 'in_progress'" decoration-warning="new_status == 'paused'" decoration-primary="new_status == 'completed'" decoration-danger="new_status == 'cancelled'">
                                    <field name="change_date"/>
                                    <field name="action_display" string="الإجراء"/>
                                    <field name="old_status"/>
                                    <field name="new_status"/>
                                    <field name="user_id"/>
                                    <field name="reason"/>
                                    <field name="duration_days" string="المدة (أيام)"/>
                                </tree>
                            </field>
                        </page>
                        <page string="ملاحظات" name="notes">
                            <field name="notes" placeholder="ملاحظات المشروع..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Project Search View -->
    <record id="farm_project_view_search" model="ir.ui.view">
        <field name="name">farm.project.view.search</field>
        <field name="model">farm.project</field>
        <field name="arch" type="xml">
            <search string="البحث في المشاريع">
                <field name="name"/>
                <field name="code"/>
                <field name="farm_id"/>
                <separator/>
                <filter name="filter_draft" string="مسودة" domain="[('status', '=', 'draft')]"/>
                <filter name="filter_in_progress" string="قيد التنفيذ" domain="[('status', '=', 'in_progress')]"/>
                <filter name="filter_paused" string="متوقف" domain="[('status', '=', 'paused')]"/>
                <filter name="filter_completed" string="مكتمل" domain="[('status', '=', 'completed')]"/>
                <filter name="filter_cancelled" string="ملغي" domain="[('status', '=', 'cancelled')]"/>
                <separator/>
                <filter name="filter_running" string="المشاريع الجارية" domain="[('status', 'in', ['draft', 'in_progress', 'paused'])]"/>
                <separator/>
                <group expand="0" string="تجميع حسب">
                    <filter name="group_farm" string="المزرعة" context="{'group_by': 'farm_id'}"/>
                    <filter name="group_status" string="الحالة" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Project Action -->
    <record id="farm_project_action" model="ir.actions.act_window">
        <field name="name">المشاريع</field>
        <field name="res_model">farm.project</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="farm_project_view_search"/>
        <field name="context">{'search_default_filter_running': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                أنشئ مشروعك الأول
            </p>
            <p>
                مشاريع المزارع تتيح لك تتبع الإنتاج والتكاليف.
            </p>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- PROJECT HOUSE ASSIGNMENT VIEWS -->
    <!-- ============================================================ -->
    
    <!-- Project House Tree View -->
    <record id="farm_project_house_view_tree" model="ir.ui.view">
        <field name="name">farm.project.house.view.tree</field>
        <field name="model">farm.project.house</field>
        <field name="arch" type="xml">
            <tree string="تخصيصات البيوت">
                <field name="project_id"/>
                <field name="house_id"/>
                <field name="sector_id"/>
                <field name="unit_id"/>
                <field name="house_area" string="المساحة (م²)"/>
                <field name="product_id" context="{'farm_produce_filter': True}"/>
                <field name="expected_qty" string="المتوقع"/>
                <field name="uom_id"/>
                <field name="total_harvested" string="المحصود"/>
                <field name="progress_percent" widget="progressbar"/>
                <field name="total_house_cost" optional="show"/>
                <field name="total_allocated_cost" optional="show"/>
                <field name="remaining_cost" optional="show"/>
                <field name="avg_unit_cost" optional="show"/>
                <field name="harvest_count" optional="hide"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Project House Form View -->
    <record id="farm_project_house_view_form" model="ir.ui.view">
        <field name="name">farm.project.house.view.form</field>
        <field name="model">farm.project.house</field>
        <field name="arch" type="xml">
            <form string="تخصيص البيت">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_harvests" type="object" class="oe_stat_button" icon="fa-leaf">
                            <div class="o_stat_info">
                                <field name="harvest_count" class="o_stat_value"/>
                                <span class="o_stat_text">حصادات</span>
                            </div>
                        </button>
                        <button name="action_view_costs" type="object" class="oe_stat_button" icon="fa-money">
                            <div class="o_stat_info">
                                <field name="total_house_cost" widget="monetary" class="o_stat_value"/>
                                <span class="o_stat_text">التكلفة</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group string="معلومات التخصيص">
                            <field name="project_id"/>
                            <field name="house_id"/>
                            <field name="house_area" string="المساحة (م²)"/>
                            <field name="sector_id"/>
                            <field name="unit_id"/>
                            <field name="farm_id"/>
                        </group>
                        <group string="خطة الحصاد">
                            <field name="product_id" context="{'farm_produce_filter': True}"/>
                            <field name="expected_qty"/>
                            <field name="uom_id"/>
                            <field name="season"/>
                            <field name="activity_description"/>
                        </group>
                    </group>
                    
                    <!-- Harvest Statistics -->
                    <group string="إحصائيات الحصاد">
                        <group>
                            <field name="total_harvested"/>
                            <field name="progress_percent" widget="progressbar"/>
                        </group>
                        <group>
                            <field name="total_house_cost"/>
                            <field name="total_allocated_cost"/>
                            <field name="remaining_cost"/>
                            <field name="avg_unit_cost"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <!-- Harvest Entries -->
                    <notebook>
                        <page string="سجلات الحصاد" name="harvests">
                            <field name="harvest_entry_ids" readonly="1">
                                <tree>
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="entry_progress" widget="progressbar"/>
                                    <field name="remaining_cost_before"/>
                                    <field name="allocated_cost"/>
                                    <field name="unit_cost"/>
                                    <field name="cumulative_harvested"/>
                                    <field name="cumulative_allocated"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="ملاحظات" name="notes">
                            <field name="notes" placeholder="ملاحظات..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Project House Search View -->
    <record id="farm_project_house_view_search" model="ir.ui.view">
        <field name="name">farm.project.house.view.search</field>
        <field name="model">farm.project.house</field>
        <field name="arch" type="xml">
            <search string="البحث في تخصيصات البيوت">
                <field name="project_id"/>
                <field name="house_id"/>
                <field name="sector_id"/>
                <field name="unit_id"/>
                <separator/>
                <group expand="0" string="تجميع حسب">
                    <filter name="group_project" string="المشروع" context="{'group_by': 'project_id'}"/>
                    <filter name="group_farm" string="المزرعة" context="{'group_by': 'farm_id'}"/>
                    <filter name="group_sector" string="القطاع" context="{'group_by': 'sector_id'}"/>
                    <filter name="group_unit" string="الوحدة" context="{'group_by': 'unit_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Project House Action -->
    <record id="farm_project_house_action" model="ir.actions.act_window">
        <field name="name">تخصيصات البيوت</field>
        <field name="res_model">farm.project.house</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="farm_project_house_view_search"/>
    </record>

    <!-- ============================================================ -->
    <!-- STATUS HISTORY VIEWS -->
    <!-- ============================================================ -->
    
    <!-- Status History Tree View -->
    <record id="farm_project_status_history_view_tree" model="ir.ui.view">
        <field name="name">farm.project.status.history.view.tree</field>
        <field name="model">farm.project.status.history</field>
        <field name="arch" type="xml">
            <tree string="سجل الحالات" create="false" delete="false" edit="false">
                <field name="project_id"/>
                <field name="change_date"/>
                <field name="action_display" string="الإجراء"/>
                <field name="old_status"/>
                <field name="new_status"/>
                <field name="user_id"/>
                <field name="reason"/>
                <field name="duration_days"/>
            </tree>
        </field>
    </record>

    <!-- Status Wizard View -->
    <record id="farm_project_status_wizard_view_form" model="ir.ui.view">
        <field name="name">farm.project.status.wizard.view.form</field>
        <field name="model">farm.project.status.wizard</field>
        <field name="arch" type="xml">
            <form string="تغيير حالة المشروع">
                <group>
                    <field name="project_id" readonly="1"/>
                    <field name="action_type" invisible="1"/>
                    <field name="reason" placeholder="أدخل سبب التغيير..." required="1"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="تأكيد" class="btn-primary"/>
                    <button string="إلغاء" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Sequences -->
    <record id="seq_farm_project" model="ir.sequence">
        <field name="name">مشروع المزرعة</field>
        <field name="code">farm.project</field>
        <field name="prefix">PROJ/%(year)s/</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>

    <record id="seq_farm_harvest_entry" model="ir.sequence">
        <field name="name">سجل الحصاد</field>
        <field name="code">farm.harvest.entry</field>
        <field name="prefix">HRV/%(year)s/</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

</odoo>

