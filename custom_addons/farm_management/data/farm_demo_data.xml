        <record id="demo_project_1" model="farm.project">
            <field name="name">مشروع إنتاج الطماطم - الموسم الشتوي</field>
            <field name="farm_id" ref="demo_farm_1"/>
            <field name="planned_start_date" eval="(DateTime.today() - relativedelta(months=2)).strftime('%Y-%m-%d')"/>
            <field name="expected_finish_date" eval="(DateTime.today() + relativedelta(months=4)).strftime('%Y-%m-%d')"/>
            <field name="status">in_progress</field>
            <field name="actual_start_date" eval="(DateTime.today() - relativedelta(months=2)).strftime('%Y-%m-%d')"/>
            <field name="notes">مشروع إنتاج الطماطم للموسم الشتوي 2024</field>
        </record>

